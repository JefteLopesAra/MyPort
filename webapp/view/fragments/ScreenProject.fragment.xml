<c:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:c="sap.ui.core">

    <VBox>
        <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
            <Title class="sapUiSmallMarginTopBottom" text="Projetos" titleStyle="H2"/>
        </VBox>
        <Carousel class="sapUiContentPadding">
            <customLayout>
				<CarouselLayout visiblePagesCount="{/CheckCarousel}" />
			</customLayout>
            <f:Card>
                <f:content>
                    <l:VerticalLayout class="sapUiContentPadding" width="100%">
                        <l:BlockLayout>
                            <l:BlockLayoutRow>
                                <l:BlockLayoutCell titleAlignment="Center" title="MyTask" width="1">
                                    <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
                                        <Avatar src="image/ProjectMyTask.png" displaySize="Custom" customDisplaySize="10rem" displayShape="Square" showBorder="true">
                                            <detailBox>
                                                <LightBox>
                                                    <LightBoxItem imageSrc="image/ProjectMyTask.png">
                                                    </LightBoxItem>
                                                    <LightBoxItem imageSrc="image/ProjectMyTask.png">
                                                    </LightBoxItem>
                                                </LightBox>
                                            </detailBox>
                                        </Avatar>
                                        <HBox class="sapUiTinyMarginBottom sapUiTinyMarginTop">
                                            <Label text="{i18n>lbUsed}:" />
                                        </HBox>
                                        <HBox class="sapUiSmallMarginBottom">
                                            <Text text="{i18n>lbUi5Js}" />
                                        </HBox>
                                        <HBox class="sapUiTinyMarginBottom">
                                            <Label text="{i18n>lbDescription}:" />
                                        </HBox>
                                        <HBox class="sapUiSmallMarginBottom">
                                            <Text text="{i18n>lbDescriptionMyTask}" />
                                        </HBox>
                                    </VBox>
                                </l:BlockLayoutCell>
                            </l:BlockLayoutRow>
                        </l:BlockLayout>
                    </l:VerticalLayout>
                </f:content>
            </f:Card>
            <f:Card>
                <f:content>
                    <l:VerticalLayout class="sapUiContentPadding" width="100%">
                        <l:BlockLayout>
                            <l:BlockLayoutRow>
                                <l:BlockLayoutCell titleAlignment="Center" title="ADOnline" width="1">
                                    <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
                                        <Avatar src="image/ProjectADOnline.png" displaySize="Custom" customDisplaySize="10rem" displayShape="Square" showBorder="true">
                                            <detailBox>
                                                <LightBox>
                                                    <LightBoxItem imageSrc="image/ProjectADOnline.png">
                                                    </LightBoxItem>
                                                </LightBox>
                                            </detailBox>
                                        </Avatar>
                                        <HBox class="sapUiTinyMarginBottom sapUiTinyMarginTop">
                                            <Label text="{i18n>lbUsed}:" />
                                        </HBox>
                                        <HBox class="sapUiSmallMarginBottom">
                                            <Text text="{i18n>lbUi5Js}" />
                                        </HBox>
                                        <HBox class="sapUiTinyMarginBottom">
                                            <Label text="{i18n>lbDescription}:" />
                                        </HBox>
                                        <HBox class="sapUiSmallMarginBottom">
                                            <Text text="{i18n>lbDescriptionADOnline}" />
                                        </HBox>
                                    </VBox>
                                </l:BlockLayoutCell>
                            </l:BlockLayoutRow>
                        </l:BlockLayout>
                    </l:VerticalLayout>
                </f:content>
            </f:Card>
            <f:Card>
                <f:content>
                    <l:VerticalLayout class="sapUiContentPadding" width="100%">
                        <l:BlockLayout>
                            <l:BlockLayoutRow>
                                <l:BlockLayoutCell titleAlignment="Center" title="{i18n>tlCalculator}" width="1">
                                    <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
                                        <Avatar src="image/ProjectCalcu.png" displaySize="Custom" customDisplaySize="10rem" displayShape="Square" showBorder="true">
                                            <detailBox>
                                                <LightBox>
                                                    <LightBoxItem imageSrc="image/ProjectCalcu.png">
                                                    </LightBoxItem>
                                                </LightBox>
                                            </detailBox>
                                        </Avatar>
                                        <HBox class="sapUiTinyMarginBottom sapUiTinyMarginTop">
                                            <Label text="{i18n>lbUsed}:" />
                                        </HBox>
                                        <HBox class="sapUiSmallMarginBottom">
                                            <Text text="{i18n>lbHtmlCss}" />
                                        </HBox>
                                        <HBox class="sapUiTinyMarginBottom">
                                            <Label text="{i18n>lbDescription}:" />
                                        </HBox>
                                        <HBox class="sapUiSmallMarginBottom">
                                            <Text text="{i18n>lbDescriptionCalculator}" />
                                        </HBox>
                                    </VBox>
                                </l:BlockLayoutCell>
                            </l:BlockLayoutRow>
                        </l:BlockLayout>
                    </l:VerticalLayout>
                </f:content>
            </f:Card>
        </Carousel>
    </VBox>
</c:FragmentDefinition>