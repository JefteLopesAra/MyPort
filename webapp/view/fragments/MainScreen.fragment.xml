<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <HBox class="customHboxMain sapUiSmallMarginBegin" alignContent="Center" alignItems="Center" justifyContent="Center">
        <VBox>
            <Avatar class="sapUiSmallMarginBottom Status" src="image/MyStatusSmall.jpg" displaySize="Custom" customDisplaySize="20rem"/>
            <HBox alignContent="Center" alignItems="Center" justifyContent="Center">
                <Avatar src="image/LogoLinkedin.png" class="sapUiTinyMarginBeginEnd" tooltip="{i18n>StatusLinkedin}" showBorder="true" press="onRedirectToLinkedin"/>
                <Avatar src="image/LogoGitHub.png" class="sapUiTinyMarginBeginEnd" tooltip="{i18n>StatusGitHub}" showBorder="true" press="onRedirectToGitHub"/>
            </HBox>
        </VBox>
    </HBox>
    <HBox class="customHboxMainRight" alignContent="Center" alignItems="Center" justifyContent="Center">
        <VBox>
            <Title textAlign="Center" text="{i18n>tlPresentation}" wrapping="true" titleStyle="H2"/>
            <HBox class="sapUiSmallMarginTopBottom" alignContent="Center" alignItems="Center">
                <Avatar fallbackIcon="sap-icon://popup-window" backgroundColor="Accent10"/>
                <Title text="{i18n>tlMySkills}" wrapping="true" titleStyle="H4"/>
            </HBox>
            <HBox class="sapUiSmallMarginTopBottom" alignContent="Center" alignItems="Center">
                <Avatar fallbackIcon="sap-icon://study-leave" backgroundColor="Accent9"/>
                <Title text="{i18n>tlStudying}" wrapping="true" titleStyle="H4"/>
            </HBox>
            <HBox class="sapUiSmallMarginTopBottom" alignContent="Center" alignItems="Center">
                <Avatar fallbackIcon="sap-icon://lightbulb" backgroundColor="Accent7"/>
                <Title text="{i18n>tlInterests}" wrapping="true" titleStyle="H4"/>
            </HBox>
            <HBox class="sapUiSmallMarginTopBottom" alignContent="Center" alignItems="Center">
                <Avatar fallbackIcon="sap-icon://target-group" backgroundColor="Accent8"/>
                <Title text="{i18n>tlOpportunities}" wrapping="true" titleStyle="H4"/>
            </HBox>

            <HBox justifyContent="Center">
                <Button class="sapUiTinyMarginBeginEnd" text="{i18n>tlContact}" tooltip="{i18n>btContactInformation}" icon="sap-icon://employee-lookup" type="Emphasized"/>
                <Button class="sapUiTinyMarginBeginEnd" text="{i18n>btTxCurriculum}" tooltip="{i18n>btTtDownloadCV}" icon="sap-icon://download" type="Success" press="onDownloadPDFCurriculum"/>
                <Button class="sapUiTinyMarginBeginEnd" text="{i18n>btTxSettings}" tooltip="{i18n>btTtGeneralSettings}" icon="sap-icon://settings" type="Neutral"/>
            </HBox>
        </VBox>
    </HBox>
</c:FragmentDefinition>