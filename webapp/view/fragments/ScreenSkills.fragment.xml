<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <l:VerticalLayout width="100%">
        <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
            <Title class="sapUiSmallMarginTopBottom" text="Habilidades" titleStyle="H2"/>
        </VBox>
        <l:BlockLayout>
            <!-- Coluna 1 -->
            <l:BlockLayoutRow accentCells="Accent1">
                <l:BlockLayoutCell width="1" title="SAPUI5" titleAlignment="Center">
                    <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
                        <Avatar class="sapUiSmallMarginBottom" src="image/logoUI5.png" displayShape="Square" displaySize="Custom" customDisplaySize="8rem" customFontSize="3rem"/>
                    </VBox>
                </l:BlockLayoutCell>
                <l:BlockLayoutCell width="1" title="XML" titleAlignment="Center">
                    <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
                        <Avatar class="sapUiSmallMarginBottom" src="image/logoXML.png" displayShape="Square" displaySize="Custom" customDisplaySize="8rem" customFontSize="3rem"/>
                    </VBox>
                </l:BlockLayoutCell>
                <l:BlockLayoutCell width="1" title="Javascript" titleAlignment="Center">
                    <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
                        <Avatar class="sapUiSmallMarginBottom" src="image/logoJavascript.png" displayShape="Square" displaySize="Custom" customDisplaySize="8rem" customFontSize="3rem"/>
                    </VBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <!-- Colune 2 -->
            <l:BlockLayoutRow accentCells="Accent1">
                <l:BlockLayoutCell width="1" title="Fiori" titleAlignment="Center">
                    <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
                        <Avatar class="sapUiSmallMarginBottom" src="image/Fiori.png" displayShape="Square" displaySize="Custom" customDisplaySize="8rem" customFontSize="3rem"/>
                    </VBox>
                </l:BlockLayoutCell>
                <l:BlockLayoutCell width="1" title="Em andamento" titleAlignment="Center">
                    <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
                        <Avatar class="sapUiSmallMarginBottom" src="image/EmBreve.png" displayShape="Square" displaySize="Custom" customDisplaySize="8rem" customFontSize="3rem"/>
                    </VBox>
                </l:BlockLayoutCell>
                <l:BlockLayoutCell width="1" title="Em andamento" titleAlignment="Center">
                    <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
                        <Avatar class="sapUiSmallMarginBottom" src="image/EmBreve.png" displayShape="Square" displaySize="Custom" customDisplaySize="8rem" customFontSize="3rem"/>
                    </VBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
        </l:BlockLayout>
    </l:VerticalLayout>
</c:FragmentDefinition>