<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <l:VerticalLayout width="100%">
        <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
            <Title class="sapUiSmallMarginTopBottom" text="Sobre mim" titleStyle="H2"/>
        </VBox>
        <l:BlockLayout>
            <l:BlockLayoutRow accentCells="Accent1">
                <l:BlockLayoutCell width="1" title="{i18n>tlExperiences}" titleAlignment="Center">
                    <Text textAlign="Center" text="{i18n>txExperiences}" />
                </l:BlockLayoutCell>
                <l:BlockLayoutCell title="{i18n>tlAcademicEducation}" titleAlignment="Center">
                    <Text textAlign="Center" text="{i18n>txAcademicEducation}" />
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
        </l:BlockLayout>
        <VBox alignContent="Center" alignItems="Center" justifyContent="Center">
            <Title class="sapUiSmallMarginBottom sapUiMediumMarginTop" text="{i18n>tlCertificate}" titleStyle="H3"/>
            <Avatar id="certify1" src="image/CertiDesmostrativoEscolar.png" class="sapUiSmallMarginBottom AvatarCertify" showBorder="true" tooltip="{i18n>tpViewCertificate}" displaySize="Custom" customDisplaySize="10rem" customFontSize="5rem">
                <detailBox>
                    <LightBox>
                        <LightBoxItem imageSrc="image/CertiDesmostrativoEscolar.png"/>
                    </LightBox>
                </detailBox>
            </Avatar>
        </VBox>
    </l:VerticalLayout>
</c:FragmentDefinition>